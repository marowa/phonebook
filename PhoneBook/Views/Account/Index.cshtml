@using PhoneBook.ViewModel
@model RegisterViewModel
@{
	ViewData["Title"] = "Create Account";
}

<div>
	<form asp-action="Register">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label for="Username">Username</label>
			<input type="text" asp-for="@Model.Username" class="form-control" id="Username">
			<span asp-validation-for="@Model.Username" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input type="password" asp-for="@Model.Password" class="form-control" id="password">
			<span asp-validation-for="@Model.Password" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label for="confirm">Confirm Password</label>
			<input type="password" asp-for="@Model.ConfirmPassword" class="form-control" id="confirm">
			<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
		</div>
		<div class="form-check">
			<label for="email">Email Address</label>
			<input type="email" asp-for="@Model.Email" class="form-control" id="email">
			<span asp-validation-for="@Model.Email" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Register</button>
	</form>
</div>

@section Scripts{
	<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
} 